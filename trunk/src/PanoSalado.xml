<settings 
	onStart="loadSpace:preview"  
>
	<spaces
		transition="3,alpha,0,Expo.easeInOutExpo"
		
		cameraRetainsLastValues="false" 
		cameraZoom="7"
		cameraFocus="100"
		cameraZoomIncrement="0.2"
		cameraKeyIncrement="75"
		cameraSensitivity="60"
		cameraFriction="0.3"
		cameraRestThreshold="0.0001"
		cameraMinimumZoom="5"
		cameraMaximumZoom="16"
		
		autorotator="false"
		autorotatorIncrement="0.25"
		autorotatorDelay="15000"
		autorotatorAutoHorizon = "true"

		dynamicQualityAdjustment="true"
		
		preciseOnAcceleration="true"
		precisionOnAcceleration="4"
		smoothOnAcceleration="true"
		
		preciseOnDeceleration="true"
		precisionOnDeceleration="4"
		smoothOnDeceleration="true"
		
		preciseAtRest="true"
		precisionAtRest="1"
		smoothAtRest="true"
	>
		<space id="preview"
			interactive="0"
			transition="3,alpha,0,Expo.easeInOutExpo"
			onTransitionEnd="loadSpace:concert1"
		>
			<sphere id="preview_pano" segments="9">
				<file>images/preview.jpg</file>
			</sphere>
			
		</space>
		<space id="concert1"
			interactive="true"
			onTransitionEnd="removeLastSpace"
			cameraMinimumZoom="5"
			cameraMaximumZoom="16"
		>
			<cube id="concert1_pano" segments="15">
				<file id="front">images/Concert_1-sm_f.jpg</file>
				<file id="right">images/Concert_1-sm_r.jpg</file>
				<file id="left">images/Concert_1-sm_l.jpg</file>
				<file id="top">images/Concert_1-sm_u.jpg</file>
				<file id="bottom">images/Concert_1-sm_d.jpg</file>
				<file id="back">images/Concert_1-sm_b.jpg</file>
			</cube>
			<hotspot id="toConcert2" 
				interactive = "true"
				pan="-20" 
				tilt="-10" 
				segments="2"
				oneSide="false"
				smooth="true"
				onClick="loadSpace:preview2"
			>
				<file>graphics/hotspot.png</file>
			</hotspot>
			
		</space>
		<space id="preview2"
			interactive="0"
			transition="3,alpha,0,Expo.easeInOutExpo"
			onTransitionEnd="loadSpace:concert2"
			pan="50"
			tilt="6"
		>
			<sphere id="preview_pano" radius="100000" segments="9" oneSide="false">
				<file>images/preview2.jpg</file>
			</sphere>
			
		</space>
		<space id="concert2"
			interactive="true"
			onTransitionEnd="removeLastSpace"
			pan="50"
			tilt="6"
		>
			<cube id="concert2_pano"  segments="15">
				<file id="front">images/Concert_2_blend-flat-s_f.jpg</file>
				<file id="right">images/Concert_2_blend-flat-s_r.jpg</file>
				<file id="left">images/Concert_2_blend-flat-s_l.jpg</file>
				<file id="top">images/Concert_2_blend-flat-s_u.jpg</file>
				<file id="bottom">images/Concert_2_blend-flat-s_d.jpg</file>
				<file id="back">images/Concert_2_blend-flat-s_b.jpg</file>
			</cube>
			<hotspot id="toConcert1" 
				interactive = "true"
				pan="80" 
				tilt="5" 
				segments="2"
				oneSide="false"
				smooth="true"
				onClick="loadSpace:preview"
			>
				<file>graphics/hotspot.png?1</file>
			</hotspot>
		</space>
	</spaces>
</settings>